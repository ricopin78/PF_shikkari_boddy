<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <p class="notice">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      </p>
      <h3 class="text-center text-info my-5">ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="field">
          <%= f.label :email, class: "text-info" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :password ,class: "text-info" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="field">
          <%= f.check_box :remember_me ,class: "text-info" %>
          <%= f.label :remember_me %>
        </div>
        <div class="text-right">
          <a href="#" class="text-info">新規会員登録</a>
        </div>
      <% end %>
      </div>
      <div class="form_group">
        <%= f.submit "ログイン", class: "btn btn-info btn-md" %>
      </div>
      <% end %>
    </div>
  </div>
</div>