<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">

      <h3 class="text-center text-info my-5">新規会員登録</h3>
      <div class="form-group my-4">
      <%= form_with model: @user, url: user_registration_path(current_user), local: true, class: "mb-3 pl-md-3" do |f| %>
      <%= render 'layouts/notification', model: f.object %>

      　<div class="form-group row">
          <%= f.label "名前", class: "col-md-4 col-form-label text-info" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name, autofocus: true,  placeholder: "(姓)", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name, autofocus: true,  placeholder: "(名)", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row my-4">
          <%= f.label :last_name_kana, "フリガナ", class: "col-md-4 col-form-label text-info" %>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :last_name_kana, autofocus: true,  placeholder: "(セイ)", class:"form-control" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "(メイ)", class:"form-control" %>
          </div>
        </div>

        <div class="form-group my-4">
          <%= f.label "プロフィール写真", class: "text-info" %><br />
          <%= f.attachment_field :profile_image, class: 'dropzone user-profile-image', id: 'upload-dropzone' %>
        </div>

        <div class="form-group my-4">
          <%= f.label :email, class: "text-info" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :company, "お勤め先企業名", class: "text-info" %>
          <%= f.text_field :company, autofocus: true, placeholder: "〇〇株式会社", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :department, "部署", class: "text-info" %>
          <%= f.text_field :department, autofocus: true, placeholder: "〇〇部", class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :position, "役職", class: "text-info" %>
          <%= f.text_field :position, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :password ,class: "text-info" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :password_confirmation ,class: "text-info" %><br />
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-group row my-4">
          <div class="col-lg-6 col-md-4">
            <%= link_to "登録済みの方はこちら", new_user_session_path, class: "btn btn-secondary btn-md" %>
          </div>
          <div class="col-sm-6 col-md-4">
            <%= f.submit "登録する", class: "btn btn-info btn-md" %>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>