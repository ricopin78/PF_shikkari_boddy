<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-9 col-xl-8 mx-auto">
      <h2 class="mb-4 ml-md-n2">マイページ編集</h2>
      <%= form_with model: @user, url: user_registration_path, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, "氏名", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :first_name, "フリガナ", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :company, "会社名", class: "col-form-label col-md-4" %>
        <div class="col-sm-6 col-md-4">
          <%= f.text_field :company, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-6 col-md-4 offset-md-4">
          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
    <%= link_to "役職を新しく登録する", new_title_path %>
  </div>
</div>