<p id="notice"><%= notice %></p>
<p>
  <strong>タイトル</strong>
  <%= @event.title %>
</p>
<p>
  <strong>開始時間</strong>
  <%= @event.start_time.strftime("%Y-%m-%d %H:%M") %>
</p>
<p>
  <strong>終了時間</strong>
  <%= @event.finish_time.strftime("%Y-%m-%d %H:%M") %>
</p>
<p>
  <strong>内容</strong>
  <%= @event.overview %>
</p>

<h3>OK件数: <%= @event.okeys.count %></h3>
<% if current_user.already_okeyed?(@event) %>
  <%= button_to 'OK！を取り消す', event_okey_path(@event), method: :delete %>
<% else %>
  <%= button_to 'OK！', event_okeys_path(@event) %>
<% end %>
<h2>OKしたユーザー</h2>
<% @event.okeyed_users.each do |user| %>
  <li><%= user.full_name %></li>
<% end %>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <a href="/users/<%= c.user.id %>"><%= c.user.full_name %></a>
    <%= c.body %>
    <hr>
  </div>
<% end %>

<%= form_with model: @comment, url: event_comments_path(@event), local: true do |f| %>
  <%= f.text_field :body %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<%= link_to "ホームへ戻る", events_path %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>