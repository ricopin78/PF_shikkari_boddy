<div class="container">
  <div class="row justify-content-center align-items-center">
    <h3 class="text-info mt-3 text-center my-5">TODO検索結果</h3></h3>
  </div>
  <div class="row justify-content-center align-items-center">
    <div class="col-md-9">
      <table class="table table-user-information">

        <thead>
          <tr>
            <th class="col-form-label text-info">タイトル</th>
            <th class="col-form-label text-info">締め切り</th>
            <th class="col-form-label text-info">優先順位</th>
            <th class="col-form-label text-info">かかる時間</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |todo| %>
          <tr>
            <td><%= todo.title %></td>
            <td><%= todo.deadline.strftime('%m/%d') %></td>
            <td><%= todo.priority %></td>
            <td><%= todo.duration.div(60) %> 時間 <%= todo.duration % 60 %> 分</td>
            <td>
              <%= link_to user_todo_path(current_user.id, todo.id) do %>
                <i class="fas fa-info-circle text-info"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>