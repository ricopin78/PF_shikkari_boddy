<div class="container">
  <div class="row">
    <h3 class="text-info">新しいTODO</h3>
    <div class="form-group">
      <%= form_with model: todo, local: true do |f| %>
      <div class="form-group">
        <%= f.label "タイトル", class: "text-info" %>
        <div class="field">
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label "締め切り日時", class: "text_info" %>
            <%= f.datetime_field :deadline, class: "form_controll" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label "かかる時間", class: "text-info" %>
            <%= f.text_field :duration, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label "内容", class: "text-info" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
        </div>
        <div class="form_group">
          <%= f.submit "登録する", class: "btn btn-info btn-md" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>