<div class="container">
  <div class="d-flex flex-row">

    <div class="col-md-3">
      <%= render 'todos/new', todo: @todo %>
    </div>

    <div class="col-md-9">
      <h2 class="text-info text-center my-5">TODOリスト</h2>

      <div class ="todo-box">
        <!--重要×緊急-->
        <div class ="todo-list">
          <h5 class ="todo-list-label label0 text-center">重要×緊急</h5>
          <% @todo0.each do |t| %>
          <div class="todo-card">
            <div class="todo-title">
              <%= t.title %>
            </div>
            <div class="todo-deadline">
              <%= t.deadline.strftime('%m/%d') %>
            </div>
          </div>
          <% end %>
        </div>

        <!--重要×緊急でない-->
        <div class ="todo-list">
          <h5 class ="todo-list-label label1 text-center">重要×緊急でない</h5>
          <% @todo1.each do |t| %>
          <div class="todo-card">
            <div class="todo-title">
              <%= t.title %>
            </div>
            <div class="todo-deadline">
              <%= t.deadline.strftime('%m/%d') %>
            </div>
          </div>
          <% end %>
        </div>

        <!--重要でない×緊急-->
        <div class ="todo-list">
          <h5 class ="todo-list-label label2 text-center">重要でない×緊急</h5>
          <% @todo2.each do |t| %>
          <div class="todo-card">
            <div class="todo-title">
              <%= t.title %>
            </div>
            <div class="todo-deadline">
              <%= t.deadline.strftime('%m/%d') %>
            </div>
          </div>
          <% end %>
        </div>

        <!--重要でない×緊急でない-->
        <div class ="todo-list">
          <h5 class ="todo-list-label label3 text-center">重要でない×緊急でない</h5>
          <% @todo3.each do |t| %>
          <div class="todo-card">
            <div class="todo-title">
              <%= t.title %>
            </div>
            <div class="todo-deadline">
              <%= t.deadline.strftime('%m/%d') %>
            </div>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>