<div class="container">
  <div class="d-flex flex-row">
    <div class="col-md-3">
      <%= render 'todos/new', todo: @todo %>
      <%= render 'todos/search', q: @q %>
    </div>
    <div class="col-md-9 todos">
      <h2 class="text-info text-center my-5">TODOリスト</h2>

      <div class ="todo-box">
        <!--重要×緊急-->
        <h5 class ="todo-list-label label0 text-center">重要×緊急</h5>
        <div class ="todo-list list0">
          <% @todos0.each do |t| %>
            <div class="todo-card">
              <%= link_to user_todo_path(current_user.id, t.id) do %>
              <div class="todo-title"><%= t.title %></div>
              <div class="todo-line2">
                <div class="todo-deadline"><%= t.deadline.strftime('%m/%d') %></div>
                <% end %>
                <span data-todo-id=<%= t.id %> class="todo-edit js-edit-todo-button">
                  <i class="fas fa-edit text-primary"></i>
                </span>
              </div>
            </div>
          <% end %>
        </div>

        <div class="lists-next" >
          <!--重要×緊急でない-->
          <div class="list-next">
            <h5 class ="todo-list-label label1 text-center">重要×緊急でない</h5>
            <div class ="todo-list list1">
              <% @todos1.each do |t| %>
                  <div class="todo-card">
                  <%= link_to user_todo_path(current_user.id, t.id) do %>
                    <div class="todo-title"><%= t.title %></div>
                    <div class="todo-deadline"><%= t.deadline.strftime('%m/%d') %></div>
                  <% end %>
                  </div>
              <% end %>
            </div>
          </div>

          <!--重要でない×緊急-->
          <div class="list-next">
            <h5 class ="todo-list-label label2 text-center">重要でない×緊急</h5>
            <div class ="todo-list list2">
              <% @todos2.each do |t| %>
                  <div class="todo-card">
                  <%= link_to user_todo_path(current_user.id, t.id) do %>
                    <div class="todo-title"><%= t.title %></div>
                    <div class="todo-deadline"><%= t.deadline.strftime('%m/%d') %></div>
                  <% end %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>

        <!--重要でない×緊急でない-->
        <h5 class ="todo-list-label label3 text-center">重要でない×緊急でない</h5>
        <div class ="todo-list list3">
          <% @todos3.each do |t| %>
              <div class="todo-card">
                <%= link_to user_todo_path(current_user.id, t.id) do %>
                  <div class="todo-title"><%= t.title %></div>
                  <div class="todo-deadline"><%= t.deadline.strftime('%m/%d') %></div>
                <% end %>
              </div>
          <% end %>
        </div>

        <!--完了済みタスク-->
        <h5 class ="todo-list-label label3 text-center">完了済みタスク</h5>
        <div class ="todo-list list3">
          <% @todos_completed.each do |t| %>
              <div class="todo-card">
                <%= link_to user_todo_path(current_user.id, t.id) do %>
                  <div class="todo-title"><%= t.title %></div>
                  <div class="todo-deadline"><%= t.deadline.strftime('%m/%d') %></div>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>