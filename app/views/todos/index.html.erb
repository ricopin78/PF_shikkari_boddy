<div class="container">
  <div class="d-flex flex-row">
    <div class="col-md-3">
      <%= render 'todos/new', todo: @todo %>
    </div>
    <div class="col-md-9">
      <h2 class="text-info mt-3 text-center my-5">TODOリスト</h2>
