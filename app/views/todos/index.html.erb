        <div class ="todo-list">
          <h5 class ="todo-list-label label0">重要×緊急</h5>
          <% @todo0.each do |t| %>
          <div class="todo-card">
            <div class="todo-title">
              <%= t.title %>
            </div>
            <div class="todo-deadline">
